<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.project1.RegisterController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="82.0" layoutY="36.0" text="FINANCE MANAGER" textAlignment="CENTER" textFill="#2a292e">
            <font>
                <Font name="Roboto Bold" size="48.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" layoutX="94.0" layoutY="95.0" prefHeight="479.0" prefWidth="411.0">
            <TextField fx:id="usernameField" prefHeight="70.0" prefWidth="390.0" promptText="Enter username" style="-fx-border-color: black; -fx-border-radius: 3;">
                <font>
                    <Font name="Roboto Regular" size="20.0" />
                </font>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="emailField" prefHeight="70.0" prefWidth="390.0" promptText="Enter email" style="-fx-border-color: black; -fx-border-radius: 3;">
                <font>
                    <Font name="Roboto Regular" size="20.0" />
                </font>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" prefHeight="70.0" prefWidth="390.0" promptText="Enter password" style="-fx-border-color: black; -fx-border-radius: 3;">
                <font>
                    <Font name="Roboto Regular" size="20.0" />
                </font>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="confirmPasswordField" prefHeight="70.0" prefWidth="390.0" promptText="Confirm password" style="-fx-border-color: black; -fx-border-radius: 3;">
                <font>
                    <Font name="Roboto Regular" size="20.0" />
                </font>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
                </VBox.margin>
            </PasswordField>
            <Label fx:id="errorLabel" textFill="#690303">
                <font>
                    <Font name="Roboto Regular" size="12.0" />
                </font>
            </Label>
            <Button fx:id="registerBtn" alignment="CENTER" contentDisplay="CENTER" onAction="#processRegister" prefHeight="75.0" prefWidth="183.0" style="-fx-background-color: #2a292e; -fx-background-radius: 3;" text="REGISTER" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Roboto Bold" size="30.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </VBox.margin>
            </Button>
         <Hyperlink fx:id="loginBtn" onAction="#loginPressed" text="LOG IN">
            <font>
               <Font name="Roboto Bold" size="16.0" />
            </font>
            <padding>
               <Insets top="10.0" />
            </padding>
         </Hyperlink>
        </VBox>
    </children>
</AnchorPane>
